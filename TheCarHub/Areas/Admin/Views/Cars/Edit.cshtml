@model TheCarHub.Areas.Admin.DTO.Write.CarDtoWrite

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="customFile">
                    <input asp-for="Image" class="form-control" id="customFile" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" placeholder="Lorem ipsum..." class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <select asp-for="Year" class="form-control">
                    <option value="">--- Year ---</option>
                    @for (int i = 1990; i <= DateTime.Now.Year; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" placeholder="0123456789" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <select asp-for="Model" class="form-control">
                    <option value="">--- Choose a model ---</option>
                    <option value="Miata">Miata</option>
                    <option value="Liberty">Liberty</option>
                    <option value="Grand Caravan">Grand Caravan</option>
                    <option value="Explorer">Explorer</option>
                    <option value="Civic">Civic</option>
                    <option value="GTI">GTI</option>
                    <option value="Edge">Edge</option>

                    @*@foreach (var i in Model.Model)
                    {
                    <option value="@i">@i</option>
                    }*@
                </select>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trim" class="control-label"></label>
                <input asp-for="Trim" class="form-control" />
                <span asp-validation-for="Trim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" type="date" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase" class="control-label"></label>
                <input asp-for="Purchase" class="form-control" />
                <span asp-validation-for="Purchase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repairs" class="control-label"></label>
                <input asp-for="Repairs" class="form-control" />
                <span asp-validation-for="Repairs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairsCost" class="control-label"></label>
                <input asp-for="RepairsCost" class="form-control" />
                <span asp-validation-for="RepairsCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LotDate" class="control-label"></label>
                <input asp-for="LotDate" type="date" class="form-control" />
                <span asp-validation-for="LotDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
